{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "verifyAccess": false,
      "message": "chore(release): publish",
      "allowBranch": ["dev", "main", "release"],
      "conventionalCommits": true,
      "yes": true,
      "fromPackage": true,
      "noGitTagVersion": true,
      "patch": true
    }
  },
  "version": "0.2.0"
}
